[Unit]
Description=Kubernetes Scheduler Plugin
Documentation=https://kubernetes.io/zh/docs

[Service]
EnvironmentFile=-{{ config_dir }}/{{ config_file }}
ExecStart={{ bin_dir }}/kube-scheduler \
            $KUBE_ADDRESSES \
            $KUBE_SCHEDULER_PORT \
            $KUBE_SCHEDULER_TLS_CERT_FILE \
            $KUBE_SCHEDULER_TLS_PRIVATE_KEY_FILE \
            $KUBE_SCHEDULER_CONFIG \
            $KUBE_LEADER_ELECT \
            $KUBE_LOG_ARGS \
            $REQUESTHEADER_ALLOWED_NAMES \
            $REQUESTHEADER_CLIENT_CA_FILE \
            $REQUESTHEADER \
            $KUBE_SCHEDULER_ARGS
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
